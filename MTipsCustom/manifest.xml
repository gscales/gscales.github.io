<?xml version="1.0" encoding="utf-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1" 
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
      xsi:type="MailApp">
    <!-- Id is a unique UUID for the mail app -->
    <Id>61306382-ad5b-4b37-a0af-e5e104749bc6</Id>
    <Version>1.0</Version>
    <ProviderName>MSGDevelop</ProviderName>
    <DefaultLocale>en-us</DefaultLocale>
    <DisplayName DefaultValue="MailTips Custom Application" />
    <Description DefaultValue="Get and Display Custom MailTip Information using REST and Office Javascript API" />
  <Hosts>
    <Host Name="Mailbox" />
  </Hosts>
  <Requirements>
    <Sets DefaultMinVersion="1.1">
      <Set Name="Mailbox" />
    </Sets>
  </Requirements>

  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <!-- Change the following line to specify     -->
        <!-- the web server that hosts the HTML file. -->
      <SourceLocation DefaultValue="https://gscales.github.io/MailtipsCustom/MailtipsCustom.htm" />
      <RequestedHeight>300</RequestedHeight>
      </DesktopSettings>
    </Form>
    <Form xsi:type="ItemEdit">
      <DesktopSettings>
        <!-- Change the following line to specify     -->
        <!-- the web server that hosts the HTML file. -->
      <SourceLocation DefaultValue="https://gscales.github.io/MailtipsCustom/MailtipsCustom.htm" />
      </DesktopSettings>
    </Form>
  </FormSettings>

  <Permissions>ReadWriteMailbox</Permissions>
  <Rule xsi:type="RuleCollection" Mode="Or"> 
    <Rule xsi:type="RuleCollection" Mode="Or">
      <Rule xsi:type="ItemIs" ItemType="Appointment" FormType="Read" />
      <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read" /> 
    </Rule> 
  </Rule>
 <Rule xsi:type="RuleCollection" Mode="And">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
  </Rule>

  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Requirements>
      <bt:Sets DefaultMinVersion="1.3">
        <bt:Set Name="Mailbox" />
      </bt:Sets>
    </Requirements>

    <Hosts>
      <Host xsi:type="MailHost">

        <DesktopFormFactor>
          <FunctionFile resid="functionFile" />

          <!-- Message read form -->
          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="CTipsCmdGroup">
                <Label resid="groupLabel" />
                <!-- Task pane button -->
                <Control xsi:type="Button" id="CTipsOpenPaneButton">
                  <Label resid="CTipsOpenPaneBtnLabel" />
                  <Supertip>
                    <Title resid="CTipsOpenPaneBtnTipTitle" />
                    <Description resid="CTipsOpenPaneBtnTipDescription" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="MTipsCustom-16" />
                    <bt:Image size="32" resid="MTipsCustom-32" />
                    <bt:Image size="80" resid="MTipsCustom-80" />
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="CTipsTaskPaneUrl" />
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>

    <Resources>
      <bt:Images>
        <!-- MHA icon -->
        <bt:Image id="MTipsCustom-16" DefaultValue="https://gscales.github.io/MailtipsCustom/images/MTipsCustom-16.png"/>
        <bt:Image id="MTipsCustom-32" DefaultValue="https://gscales.github.io/MailtipsCustom/images/MTipsCustom-32.png"/>
        <bt:Image id="MTipsCustom-80" DefaultValue="https://gscales.github.io/MailtipsCustom/images/MTipsCustom-80.png"/>
      </bt:Images>
      <bt:Urls>
        <bt:Url id="functionFile" DefaultValue="https://gscales.github.io/MailtipsCustom/functions.html"/>
        <bt:Url id="mtipsTaskPaneUrl" DefaultValue="https://gscales.github.io/MailtipsCustom/MTipsCustom.htm"/>
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="groupLabel" DefaultValue=" "/>
          </bt:ShortStrings>
      <bt:LongStrings>
      </bt:LongStrings>
    </Resources>

    <!-- VersionOverrides v1.1 -->
    <!-- Use this to enable taskpane pinning -->
    <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.1" xsi:type="VersionOverridesV1_1">
      <Requirements>
        <bt:Sets DefaultMinVersion="1.3">
          <bt:Set Name="Mailbox" />
        </bt:Sets>
      </Requirements>

      <Hosts>
        <Host xsi:type="MailHost">

          <DesktopFormFactor>
            <FunctionFile resid="functionFile" />

            <!-- Message read form -->
            <ExtensionPoint xsi:type="MessageReadCommandSurface">
              <OfficeTab id="TabDefault">
                <Group id="CTipCmdGroup">
                  <Label resid="groupLabel" />
                  <!-- Task pane button -->
                  <Control xsi:type="Button" id="CTipOpenPaneButton">
                    <Label resid="CTipOpenPaneBtnLabel" />
                    <Supertip>
                      <Title resid="CtipOpenPaneBtnTipTitle" />
                      <Description resid="CTipOpenPaneBtnTipDescription" />
                    </Supertip>
                    <Icon>
                      <bt:Image size="16" resid="MTipsCustom-16" />
                      <bt:Image size="32" resid="MTipsCustom-32" />
                      <bt:Image size="80" resid="MTipsCustom-80" />
                    </Icon>
                    <Action xsi:type="ShowTaskpane">
                      <SourceLocation resid="CTipDesktopPaneUrl" />
                      <SupportsPinning>true</SupportsPinning>
                    </Action>
                  </Control>
                </Group>
              </OfficeTab>
            </ExtensionPoint>
          </DesktopFormFactor>
        </Host>
      </Hosts>

      <Resources>
        <bt:Images>
          <bt:Image id="MTipsCustom-16" DefaultValue="https://gscales.github.io/MailtipsCustom/images/MTipsCustom-16.png"/>
          <bt:Image id="MTipsCustom-32" DefaultValue="https://gscales.github.io/MailtipsCustom/images/MTipsCustom-32.png"/>
          <bt:Image id="MTipsCustom-80" DefaultValue="https://gscales.github.io/MailtipsCustom/images/MTipsCustom-80.png"/>
        </bt:Images>
        <bt:Urls>
          <bt:Url id="functionFile" DefaultValue="https://gscales.github.io/MailtipsCustom/functions.html"/>
          <bt:Url id="CTipDesktopPaneUrl" DefaultValue="https://gscales.github.io/MailtipsCustom/desktoppane.html"/>
        </bt:Urls>
        <bt:ShortStrings>
          <bt:String id="groupLabel" DefaultValue=" "/>
          <bt:String id="CTipOpenPaneBtnLabel" DefaultValue="View"/>
          <bt:String id="CTipOpenPaneBtnTipTitle" DefaultValue=""/>
        </bt:ShortStrings>
        <bt:LongStrings>
          <bt:String id="CTipOpenPaneBtnTipDescription" DefaultValue="" />
        </bt:LongStrings>
      </Resources>
    </VersionOverrides>
  </VersionOverrides>
</OfficeApp>
